<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcodee.clase01"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- versionCode = versión para el manejo interno de la app
     versionName = versión que conoce el usuario final -->

    <uses-sdk
        android:maxSdkVersion="25"
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <!-- minSdkVersion = versión minima de android
    maxSdkVersion = versión máxima de android
    targetSdkVersion = versión de la cual tomara las caracteristicas
     -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--
        portrait = vertical
        landscape = horizontal
        -->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        <activity android:name=".MainActivity"></activity>
        -->

    </application>

</manifest>